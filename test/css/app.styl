@import '../../'

body
  width: 90%
  margin: 0 auto

.sandbox
.grid-container
  border 1px solid rgba(0, 0, 0, 0.1)
  background #efefef

.grid-container
  container()

.sandbox
.grid-container

  &:before
    content 'DEMO'
    padding 1rem
    display block
    background rgba(255, 255, 255, 0.5)
    border-bottom 1 solid rgba(0, 0, 0, 0.1)

.box
  &.column-full
    column()
  &.column-one-one
    column(1, 1)
  &.column-one-half
    column(1, 2)
  &.column-one-third
    column(1, 3)
  &.column-two-thirds
    column(2, 3)
  &.column-one-quarter
    column(1, 4)
  &.column-one-eighth
    column(1, 8)
  p
    text-align center
    background #fff
    padding: 1rem

ul.comma-list
  comma-list()

ul.serial-comma-list
  comma-list(true)

