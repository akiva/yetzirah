@import '../../'

body
  margin gutter

.demo
  border 1px solid rgba(0, 0, 0, 0.1)
  background #efefef
  padding gutter gutter 0 gutter
  margin-bottom gutter

  &:before
    content 'Demo'
    text-transform uppercase
    padding gutter
    margin (gutter * -1) (gutter * -1) gutter
    display block
    background rgba(255, 255, 255, 0.5)
    border-bottom 1 solid rgba(0, 0, 0, 0.1)

.grid-container
  container()
  margin-bottom 0
.column-full
  column()
.column-one-one
  column(1, 1)
.column-one-half
  column(1, 2)
.column-one-third
  column(1, 3)
.column-two-thirds
  column(2, 3)
.column-one-quarter
  column(1, 4)
.column-one-eighth
  column(1, 8)

.column-full
.column-one-one
.column-one-half
.column-one-third
.column-two-thirds
.column-one-quarter
.column-one-eighth

  p
    text-align center
    padding gutter
    background rgb(255, 255, 255)
    border 1px solid rgba(0, 0, 0, 0.1)

ul.comma-list
  comma-list()

ul.serial-comma-list
  comma-list(true)

