inline-list()
  margin-left 0
  padding-left 0
  li
    display inline

comma-list(serial = false)
  inline-list()
  li
    &:after
      content ', '
    &:last-child:after
      content ''
    if serial
      &:last-child:before
        content 'and '
      &:first-child:before
      &:nth-child(2):before
        content ''
